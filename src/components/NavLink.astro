---
interface Props {
  href: string;
}

const { href } = Astro.props as Props;
const pathname = new URL(Astro.request.url).pathname;
---

<a
  class={pathname.includes(href)
    ? "text-accent dark:text-accent-dark-10 font-semibold no-underline"
    : "text-light no-underline"}
  href={href}><slot /></a
>
