---
import BaseLayout from "./Base.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  variant?: "with-nav" | "bare";
}

let { content } = Astro.props;
let { date, title } = content;
let formattedDate = new Intl.DateTimeFormat("en-US", {
  month: "long",
  day: "numeric",
  year: "numeric",
}).format(new Date(date));
---

<BaseLayout {title}>
  <div class="mx-auto">
    <Header />
    <main
      class="flex-1 max-w-none prose dark:prose-invert prose-headings:font-special mb-8"
    >
      <p class="text-sm text-light">{formattedDate}</p>
      <slot />
    </main>
    <Footer />
  </div>
</BaseLayout>
