<section class="section section--admin">
  <h1 class="headline">Admin</h1>
  <hr class="rule">
 
  <%= form_for(@user) do |f| %>
  <div class="checkbox float-left alpha">
    <%= f.check_box :accepting_projects %>
    <% if @user.accepting_projects %>
      <%= f.label :accepting_projects, "Available" %>
    <% else %>
      <%= f.label :accepting_projects, "Not Available" %>
    <% end %>
  </div>
  <%= f.button 'Save Changes', class: 'button', "data-icon" => "î˜‹"  %>
  <% end %>
</section>

<hr class="rule">

<section class="section section--admin">
  <h1>Posts</h1>
  <%= link_to "New Post", new_post_path, class: "button button--small" %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Title</th>
        <th>Slug</th>
        <th>Status</th>
        <th>Action</th>
        <th>ID</th>
      </tr>
    </thead>
    <tbody>
    <% @user.posts.each do |post| %>
      <tr>
      <td><%= post.created_at.strftime('%m.%d.%Y') %></td>
      <td><%= post.title %></td>
      <td><%= post.slug %></td>
      <td><%= post.published ? 'Published' : 'Private' %></td>
      <td>
        <%= link_to "View", post_path(post) %> / 
        <%= link_to "Edit", edit_post_path(post) %> / 
        <%= link_to "Delete", post_path(post), :method =>  :delete, "data-remove" => 'tr' %>
      </td>
      <td>
        <%= post.id %>
      </td>
    </tr>
  <% end %>
    </tbody>
  </table>
</section>

<hr class="rule">

<section class="section section--admin">

   <h1>Projects</h1>
   <%= link_to "New Project", new_project_path, class: "button button--small" %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Name</th>
        <th>Slug</th>
        <th>Status</th>
        <th>Action</th>
        <th>ID</th>
      </tr>
    </thead>
    <tbody>
      <% @user.projects.each do |project| %>
        <tr>
          <td><%= project.created_at.strftime('%m.%d.%Y') %></td>
          <td><%= project.name %></td>
          <td><%= project.slug %></td>
          <td><%= project.published ? 'Published' : 'Private' %></td>
          <td>
            <%= link_to "View", project_path(project) %> / 
            <%= link_to "Edit", edit_project_path(project) %> / 
            <%= link_to "Delete", project_path(project), :method =>  :delete, data: { confirm: 'Are you sure?' } %>
          </td>
          <td>
            <%= project. id %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</section>



