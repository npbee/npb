{
  "name": "npb",
  "version": "1.0.0",
  "description": "Blog, portfolio, and ramblings",
  "main": "index.js",
  "scripts": {
    "prebuild": "rm -rf _site",
    "build": "NODE_ENV=production run-s build:*",
    "dev": "npm-run-all --parallel watch:*",
    "build:css": "tailwindcss -i src/site/_includes/css/tailwind.css -o src/site/css/styles.css --verbose --minify",
    "build:html": "eleventy",
    "watch:html": "eleventy --serve --port=8181",
    "watch:css": "tailwindcss -i src/site/_includes/css/tailwind.css -o src/site/css/styles.css --watch --verbose"
  },
  "browser": {
    "fs": false,
    "marked": false
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.4",
    "html-minifier": "^4.0.0",
    "luxon": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "prettier": "^2.3.2",
    "tailwindcss": "^3.0.23"
  }
}
